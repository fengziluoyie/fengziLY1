<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="top"
	android:orientation="vertical"
	android:background="@drawable/main_bg">

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:gravity="top|center"
		android:layout_marginTop="10dp"
		android:background="@drawable/tools_bg_1"
		android:layout_marginBottom="10dp">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="结果:"
			android:textColor="#FFFFFF"/>

		<TextView
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="wrap_content"
			android:text="点击等号即可知道结果"
			android:textColor="#FFFFFF"
			android:id="@+id/ggs_jieguo"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:background="@drawable/tools_bg_1"
		android:gravity="top|center"
		android:padding="10dp">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:gravity="top|left">

			<TextView
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_width="wrap_content"
				android:text="最小值:"
				android:textColor="#FFFFFF"/>

			<EditText
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_weight="1"
				android:textColor="#FFFFFF"
				android:id="@+id/ggs_s"
				android:inputType="number"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:gravity="top|left">

			<TextView
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:textColor="#FFFFFF"
				android:text="中间值:"/>

			<EditText
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:textColor="#FFFFFF"
				android:layout_weight="1"
				android:id="@+id/ggs_m"
				android:inputType="number"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:gravity="top|left">

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_weight="1"
				android:textColor="#FFFFFF"
				android:text="最大值:"/>

			<EditText
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_weight="1"
				android:textColor="#FFFFFF"
				android:id="@+id/ggs_l"
				android:inputType="number"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:background="?android:attr/selectableItemBackgroundBorderless"
			android:orientation="horizontal">

			<Button
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:background="@drawable/shuibowen"
				android:text="1"
				android:layout_weight="1"
				android:textColor="#FFFFFF"
				android:gravity="center"
				android:onClick="按键"
				android:id="@+id/key_1"/>

			<Button
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:background="@drawable/shuibowen"
				android:text="2"
				android:layout_weight="1"
				android:textColor="#FFFFFF"
				android:gravity="center"
				android:onClick="按键"
				android:id="@+id/key_2"/>

			<Button
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:background="@drawable/shuibowen"
				android:text="3"
				android:layout_weight="1"
				android:textColor="#FFFFFF"
				android:gravity="center"
				android:onClick="按键"
				android:id="@+id/key_3"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal">

			<Button
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:background="@drawable/shuibowen"
				android:text="4"
				android:layout_weight="1"
				android:textColor="#FFFFFF"
				android:gravity="center"
				android:onClick="按键"
				android:id="@+id/key_4"/>

			<Button
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:background="@drawable/shuibowen"
				android:text="5"
				android:layout_weight="1"
				android:textColor="#FFFFFF"
				android:gravity="center"
				android:onClick="按键"
				android:id="@+id/key_5"/>

			<Button
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:background="@drawable/shuibowen"
				android:text="6"
				android:layout_weight="1"
				android:textColor="#FFFFFF"
				android:onClick="按键"
				android:gravity="center"
				android:id="@+id/key_6"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal">

			<Button
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:background="@drawable/shuibowen"
				android:text="7"
				android:layout_weight="1"
				android:textColor="#FFFFFF"
				android:gravity="center"
				android:onClick="按键"
				android:id="@+id/key_7"/>

			<Button
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:background="@drawable/shuibowen"
				android:text="8"
				android:layout_weight="1"
				android:onClick="按键"
				android:textColor="#FFFFFF"
				android:gravity="center"
				android:id="@+id/key_8"/>

			<Button
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:background="@drawable/shuibowen"
				android:text="9"
				android:layout_weight="1"
				android:textColor="#FFFFFF"
				android:onClick="按键"
				android:gravity="center"
				android:id="@+id/key_9"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal">

			<Button
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:background="@drawable/shuibowen"
				android:text="0"
				android:layout_weight="1"
				android:textColor="#FFFFFF"
				android:onClick="按键"
				android:gravity="center"
				android:id="@+id/key_0"/>

			<Button
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:background="@drawable/shuibowen"
				android:text="清"
				android:layout_weight="1"
				android:onClick="按键"
				android:textColor="#FFFFFF"
				android:gravity="center"
				android:id="@+id/clear"/>

			<Button
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:background="@drawable/shuibowen"
				android:text="="
				android:layout_weight="1"
				android:onClick="按键"
				android:textColor="#FFFFFF"
				android:gravity="center"
				android:id="@+id/deng"/>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>

